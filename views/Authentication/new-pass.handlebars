<head>
    <link rel="stylesheet" href="/css/login-design.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<div class="main">
    <div class="container">
        <div class="img-container">
            <a href="/">
                <img src="/img/inv.png" alt="Inventory Logo" />
            </a>
            <div class="img">
                <img src="/img/login.svg" />

            </div>
        </div>


        <div class="content-container">
            <h3>Password Reset</h3>
            <!--Body-->
            <h5 style="font-family: serif;">Please, Choose a new Password</h5>
            <form>


                <div class="form-group custom">
                    <label for="password">New Password</label>
                    <input type="password" class="form-control mine" id="exampleInputPassword1"
                        placeholder="Enter your new password">
                </div>

                <div class="form-group custom">
                    <label for="password1">Repeat Password</label>
                    <input type="password" class="form-control mine" id="exampleInputPassword1"
                        placeholder="Re-enter your new Password">
                </div>

                <div class="submit-button">
                    <a href="#" class="btn btn-primary">Save</a>
                    <a href="/" class="btn btn-danger">Cancel</a>

                </div>


            </form>

        </div>
    </div>
</div>
</div>